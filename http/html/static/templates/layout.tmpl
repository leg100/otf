{{ define "layout" }}
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="{{ addHash "/static/css/sanitize.css" }}">
  <link rel="stylesheet" href="{{ addHash "/static/css/terminal.css" }}">
  <link rel="stylesheet" href="{{ addHash "/static/css/main.css" }}">
  <title>{{ template "title" }} | oTF</title>
</head>
<body>
  <div class="body-container">
    <header>
      <nav class="navbar">
        <div class="logo">
          <a href="/">oTF</a></strong>
        </div>
        <div class="nav-links">
          <ul>
            {{ if .CurrentUser.IsAuthenticated }}
              {{ if .CurrentUser.CurrentOrganization }}
                <li class="current-organization">
                  <a href="{{ $.Path "getOrganization" "organization_name" .CurrentUser.CurrentOrganization }}">
                    {{ template "building_icon" }}
                    <span class="current-organization">{{ .CurrentUser.CurrentOrganization }}</span>
                  </a>
                </li>
              {{ end }}
              <li>
                <a href="{{ $.Path "listOrganization" }}">organizations</a>
              </li>
              <li>
                <a href="{{ .Path "getMe" }}"><span class="current-user">{{ .CurrentUser.Username }}</span></a>
              </li>
            {{ end }}
          </ul>
        </div>
      </nav>
    </header>

    <main>
    {{ block "container" . }}
      <div class="content-header">
        <div class="container-header-title">
          <strong>{{ template "container-header" . }}</strong>
        </div>
        <div class="container-header-actions">
          {{ block "container-header-actions" . }}{{ end }}
        </div>
        <div class="container-header-links">
          {{ block "container-header-links" . }}{{ end }}
        </div>
      </div>

      {{ template "flash" . }}

      <div class="content">
        {{ block "content" . }}{{ end }}
      </div>
    {{ end }}
    </main>
  </div>
  <footer><a href="https://github.com/leg100/otf">{{ .Version }}</a></footer>
</body>
</html>
{{ end }}
