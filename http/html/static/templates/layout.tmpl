{{ define "layout" }}
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="{{ addHash "/static/css/custom.css" }}">
  <link rel="stylesheet" href="{{ addHash "/static/css/bootstrap-icons.css" }}">
  <title>oTF</title>
</head>
<body>
  <header>
    <nav class="navbar navbar-dark navbar-bg-color">
      <div class="container-fluid">
        <span class="navbar-brand h1">oTF</span>
      </div>
    </nav>
  </header>
  <main>
    <div class="container">
      <h1 class="mt-5">oTF</h1>

      {{ if .Flash }}
      <div class="alert alert-primary alert-dismissible" role="alert">
        {{ . }}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
      {{ end }}

      {{ template "content" .Content }}
    </div>
  </main>
  <script src="{{ addHash "/static/js/bootstrap.bundle.min.js" }}"></script>
</body>
</html>
{{ end }}
