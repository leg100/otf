{{ define "layout" }}
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="{{ addHash "/static/css/sanitize.css" }}">
  <link rel="stylesheet" href="{{ addHash "/static/css/terminal.css" }}">
  <link rel="stylesheet" href="{{ addHash "/static/css/main.css" }}">
  <title>{{ template "title" }} | oTF</title>
</head>
<body>
  <header>
    <nav class="navbar">
      <div class="logo">
        <strong><a href="/">oTF</a></strong>
      </div>
      <div class="nav-links">
        <ul>
          {{ if .CurrentUser.IsAuthenticated }}
            {{ if not .IsOrganizationRoute }}
              {{ if .CurrentUser.CurrentOrganization }}
              <li>
                <a href="{{ $.Path "getOrganization" "organization_name" .CurrentUser.CurrentOrganization }}">
                  {{ template "building_icon" }}
                  <span class="current-organization">{{ .CurrentUser.CurrentOrganization }}</span>
                </a>
              </li>
              {{ else }}
              <li>
                <a href="{{ $.Path "listOrganization" }}">organizations</a>
              </li>
              {{ end }}
            {{ end }}
          {{ end }}
        </ul>
      </div>
      <div class="nav-links-me">
        <ul>
          {{ if .CurrentUser.IsAuthenticated }}
          <li>
            <a href="{{ .Path "getMe" }}"><span class="current-user">{{ .CurrentUser.Username }}</span></a>
          </li>
          <li>
            <form action="{{ .Path "logout" }}" method="POST">
              <button type="submit">Logout</button>
            </form>
          </li>
          {{ end }}
        </ul>
      </div>
    </nav>
    <nav aria-label="Breadcrumb" class="breadcrumbs">
      <ol>
        {{ range .Breadcrumbs }}
          <li><a href="{{ .Link }}">{{ .Name }}</a></li>
        {{ end }}
      </ol>
    </nav>
  </header>

  {{ block "container" . }}
  <div class="container">
    {{ block "sidebar" . }}{{ end }}

    <div>
      <div class="container-header">
        <h2 class="container-title">{{ template "title" . }}</h2>
        <div class="container-button">
          {{ block "container-button" . }}{{ end }}
        </div>
      </div>

      <hr>

      {{ template "flash" . }}

      <main>
        {{ block "content" . }}{{ end }}
      </main>
    </div>
  </div>
  {{ end }}
</body>
</html>
{{ end }}
