{{ template "layout" . }}

{{ define "title" }}Runs{{ end }}

{{ define "breadcrumbs" }}
<nav aria-label="Breadcrumb" class="breadcrumbs">
  <ul>
    <li><a href="{{ .Ancestor "listOrganization" }}">organizations</a></li>
    <li><a href="{{ .Ancestor "getOrganization" }}">{{ .Content.Options.OrganizationName }}</a></li>
    <li><a href="{{ .Ancestor "listWorkspace" }}">workspaces</a></li>
    <li><a href="{{ .Ancestor "getWorkspace" }}">{{ .Content.Options.WorkspaceName }}</a></li>
    <li><a href="{{ .CurrentPath }}">runs</a></li>
  </ul>
</nav>
{{ end }}

{{ define "content" }}
  <table class="table">
    <thead>
      <tr>
        <th scope="col">ID</th>
      </tr>
    </thead>
    <tbody>
      {{ range .Content.List.Items }}
      <tr>
        <td><a href="/workspaces/{{ .ID }}/runs/{{ .ID }}">{{ .ID }}</a></td>
      </tr>
      {{ end }}
    </tbody>
  </table>
{{ end }}
