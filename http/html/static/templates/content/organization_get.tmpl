{{ template "layout" . }}

{{ define "container-header" }}main menu{{ end }}

{{ define "content" }}
  <div class="content-menu">
    <span id="menu-item-workspaces" class="content-menu-item">
      <a href="{{ workspacesPath .Organization }}">workspaces</a>
    </span>
    <span id="modules" class="content-menu-item">
      <a href="{{ modulesPath .Organization }}">modules</a>
    </span>
    <span id="teams" class="content-menu-item">
      <a href="{{ teamsPath .Organization }}">teams</a>
    </span>
    {{ if or (.CurrentUser.IsOwner .Organization) .CurrentUser.IsSiteAdmin }}
    <span id="users" class="content-menu-item">
      <a href="{{ usersPath .Organization }}">users</a>
    </span>
    <span id="agent_tokens" class="content-menu-item">
      <a href="{{ agentTokensPath .Organization }}">agent tokens</a>
    </span>
    <span id="vcs_providers" class="content-menu-item">
      <a href="{{ vcsProvidersPath .Organization }}">VCS providers</a>
    </span>
    {{ end }}
  </div>
{{ end }}
