{{ template "layout" . }}

{{ define "title" }}Tokens{{ end }}

{{ define "container-header" }}
  <div>profile / tokens</div>
{{ end }}

{{ define "container-header-actions" }}
  <form action="{{ newTokenPath }}" method="GET">
    <button type="submit">New Token</button>
  </form>
{{ end }}

{{ define "container-header-links" }}{{ template "profile-header" . }}{{ end }}

{{ define "content" }}
  <table>
    <thead>
      <tr>
        <th scope="col">Description</th>
        <th scope="col">Created</th>
        <th scope="col">Delete</th>
      </tr>
    </thead>
    <tbody>
      {{ range .Content.Tokens }}
      <tr>
        <td>{{ .Description }}</td>

        <td>{{ ago .CreatedAt }} ago</td>
        <td>
          <form action="{{ deleteTokenPath .Token }}" method="POST">
            <button>{{ template "trash_icon" }}</button>
            <input type="hidden" name="id" value="{{ .ID }}">
          </form>
        </td>
      </tr>
      {{ end }}
    </tbody>
  </table>
{{ end }}
