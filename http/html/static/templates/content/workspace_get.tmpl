{{ template "layout" . }}

{{ define "title" }}workspace: {{ .Content.Name }}{{ end }}

{{ define "container-header" }}
  <a href="{{ workspacesPath .Content.OrganizationName }}">workspaces</a> / {{ .Content.Name }}
{{ end }}

{{ define "container-header-links" }}
  {{ template "workspace-header-links" . }}
{{ end }}

{{ define "content" }}
  <script type="text/javascript">
    window.addEventListener('load', (e) => {
      watchWorkspaceUpdates({{ watchWorkspacePath .Content.ID }}, {{ randAlphaNum 6 }});
    });
  </script>
  <div class="content-menu">
    <div class="workspace-info">
      <div>{{ template "identifier" .Content }}</span></div>
      <div>Terraform Version: <span class="data">v{{ .Content.TerraformVersion }}</span></div>
      <div class="workspace-lock">
        {{ if .Content.Locked }}
          <span class="workspace-lock-status workspace-lock-status-locked" title="locked by {{ .Content.GetLock }}">Locked</span>
          <form action="{{ unlockWorkspacePath .Content.ID }}" method="POST"><button>Unlock</button></form>
        {{ else }}
          <span class="workspace-lock-status workspace-lock-status-unlocked">Unlocked</span>
          <form action="{{ lockWorkspacePath .Content.ID }}" method="POST"><button>Lock</button></form>
        {{ end }}
      </div>
      <form id="workspace-start-run-form" action="{{ startRunWorkspacePath .Content.ID }}" method="POST">
        <select name="strategy" id="start-run-strategy" onchange="this.form.submit()">
          <option value="" selected>--start run--</option>
          <option value="plan-only">plan only</option>
          <option value="plan-and-apply">plan and apply</option>
        </select>
      </form>
    </div>
    {{ with .Content.Repo }}
    <div>Connected to <span class="data">{{ .Identifier }}</span></div>
    {{ end }}
    {{ with .Content.LatestRun }}
      <div>
        <h3>Latest Run</h3>
        <div id="latest-run">
          {{ template "run-item" . }}
        </div>
      </div>
    {{ end }}
    <div class="permissions-container">
      <div class="container-header-title">Permissions</div>
        <div>
          <table>
            <thead>
              <tr>
                <th>Team</th>
                <th colspan="2">Role</th>
              </tr>
            </thead>
            <tbody>
              <tr id="permissions-owners">
                <td>owners</td>
                <td>admin</td>
              </tr>
              {{ range .Content.Permissions }}
                {{ if eq .Team.Name "owners" }}
                  {{continue}}
                {{ end }}
                <tr>
                  <td>{{ .Team.Name }}</td>
                  <td>
                    <form class="horizontal-form" action="{{ setPermissionWorkspacePath $.Content.ID }}" method="POST">
                      <input name="team_name" value="{{ .Team.Name }}" type="hidden">
                      <select name="role" id="role-select">
                        {{ $currentRole := .Role.String }}
                        {{ range $.Content.Roles }}
                          {{ if eq .String $currentRole }}
                            <option value="{{ . }}" selected>{{ . }}</option>
                          {{ else }}
                            <option value="{{ . }}">{{ . }}</option>
                          {{ end }}
                        {{ end }}
                      </select>
                      <button>Update</button>
                    </form>
                  </td>
                  <td>
                    <form class="horizontal-form" action="{{ unsetPermissionWorkspacePath $.Content.ID }}" method="POST">
                      <input name="team_name" value="{{ .Team.Name }}" type="hidden">
                      <button class="delete">Remove</button>
                    </form>
                  </td>
                </tr>
              {{ end }}
              <tr>
                <form id="permissions-add-form" class="horizontal-form" action="{{ setPermissionWorkspacePath .Content.ID }}" method="POST"></form>
                <td>
                  <select form="permissions-add-form" name="team_name" id="permissions-add-select-team">
                    <option value="">--team--</option>
                    {{ range .Content.Teams }}
                      <option value="{{ .Name }}">{{ .Name }}</option>
                    {{ end }}
                  </select>
                </td>
                <td class="permissions-add-role-container">
                  <select form="permissions-add-form" name="role" id="permissions-add-select-role">
                    <option value="">--role--</option>
                    {{ range .Content.Roles }}
                      <option value="{{ . }}">{{ . }}</option>
                    {{ end }}
                  </select>
                  <button id="permissions-add-button" form="permissions-add-form" >Add</button>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
{{ end }}
