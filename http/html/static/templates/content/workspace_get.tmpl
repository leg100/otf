{{ template "layout" . }}

{{ define "title" }}{{ .Content.Name }}{{ end }}

{{ define "breadcrumbs" }}
<nav aria-label="Breadcrumb" class="breadcrumbs">
  <ul>
    <li><a href="{{ .Ancestor "listOrganization" }}">organizations</a></li>
    <li><a href="{{ .Ancestor "getOrganization" }}">{{ .Content.Organization.Name }}</a></li>
    <li><a href="{{ .Ancestor "listWorkspace" }}">workspaces</a></li>
    <li><a href="{{ .CurrentPath }}">{{ .Content.Name }}</a></li>
  </ul>
</nav>
{{ end }}

{{ define "content" }}
  <p><strong>Terraform Version</strong></p>
  <p>{{ .Content.TerraformVersion }}</p>
  <p><a href="/organizations/{{ .Content.Organization.Name }}/workspaces/{{ .Content.Name }}/runs">runs</a></p>
{{ end }}
