{{ template "layout" . }}

{{ define "title" }}Edit Workspace{{ end }}

{{ define "content" }}
  <form class="main-form" action="{{ .Relative "updateWorkspace" }}" method="POST">
    <ul>
      <li class="field">
        <label for="name">Name</label>
        <input type="text" name="name" id="name" value="{{ .Content.Workspace.Name }}" required>
      </li>
      <li class="field">
        <label for="description">Description</label>
        <input type="text" name="description" id="description" value="{{ .Content.Workspace.Description }}" required>
      </li>
      <li class="field">
        <label for="terraform_version">Terraform Version</label>
        <input type="text" name="terraform_version" id="terraform_version" value="{{ .Content.Workspace.TerraformVersion }}" required>
      </li>
      <li>
        <button>Edit workspace</button>
      </li>
    </ul>
  </form>
{{ end }}
