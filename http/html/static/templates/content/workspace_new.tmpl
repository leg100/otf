{{ template "layout" . }}

{{ define "title" }}New Workspace{{ end }}

{{ define "container-header" }}
  <a href="{{ workspacesPath .Content.Organization }}">workspaces</a>
  /
  new
{{ end }}

{{ define "content" }}
  <form class="main-form" action="{{ createWorkspacePath .Content.Organization }}" method="POST">
    <div class="field">
      <label for="name">Name</label>
      <input type="text" name="name" id="name" required>
    </div>
    <div>
      <button id="create-workspace-button">Create workspace</button>
    </div>
  </form>
{{ end }}
