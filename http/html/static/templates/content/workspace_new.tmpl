{{ template "layout" . }}

{{ define "title" }}New Workspace{{ end }}

{{ define "content" }}
  <form class="main-form" action="{{ .Relative "createWorkspace" }}" method="POST">
    <ul>
      <li class="field">
        <label for="name">Name</label>
        <input type="text" name="name" id="name" required>
      </li>
      <li>
        <button>Create workspace</button>
      </li>
    </ul>
  </form>
{{ end }}
