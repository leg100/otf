{{ template "layout" . }}

{{ define "title" }}Workspaces{{ end }}

{{ define "container-header" }}workspaces{{ end }}

{{ define "container-header-actions" }}
  <form action="{{ newWorkspacePath .Content.Options.OrganizationName }}" method="GET">
    <button type="submit">New Workspace</button>
  </form>
{{ end }}

{{ define "content" }}
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Name</th>
      </tr>
    </thead>
    <tbody>
    {{ range .Content.List.Items }}
      <tr>
          <td><a href="{{ getWorkspacePath $.Content.Options.OrganizationName .Name }}">{{ .Name }}</a></td>
        </tr>
      {{ end }}
    </tbody>
  </table>
{{ end }}
