{{ template "layout" . }}

{{ define "title" }}New Module{{ end }}

{{ define "container-header" }}
  <a href="{{ modulesPath .Content.Organization }}">modules</a> / new
{{ end }}

{{ define "content" }}
  <div class="new-module-tabs">
    <div class="new-module-tab {{ if eq .Content.Step "connect-vcs" }}selected{{ end }}">
      <a href="{{ newModulePath .Content.Organization }}?step=connect-vcs">
        1. connect vcs
      </a>
    </div>
    <div class="new-module-tab {{ if eq .Content.Step "select-repo" }}selected{{ end }}">
      2. select repo
    </div>
    <div class="new-module-tab {{ if eq .Content.Step "confirm-selection" }}selected{{ end }}">
      3. confirm selection
    </div>
  </div>
  {{ if eq .Content.Step "connect-vcs" }}
    <h3>Connect to a version control provider</h2>
    <div>
      Choose a VCS provider that hosts your module source code.
    </div>
    <div id="content-list" class="content-list">
      {{ range .Content.Items }}
        <div class="item">
          <div class="item-heading">
            <span class="status">
              {{ .Name }}
            </span>
            <span class="status-ago">{{ durationRound .CreatedAt }} ago</span>
          </div>
          <div class="item-content">
            {{ template "identifier" . }}
            <form action="{{ newModulePath $.Content.Organization }}" method="GET">
              <input type="hidden" name="step" id="select-repo-step" value="select-repo">
              <input type="hidden" name="vcs_provider_id" id="vcs_provider_id" value="{{ .ID }}">
              <button>connect</button>
            </form>
          </div>
        </div>
      {{ else }}
        No VCS providers are currently configured.
      {{ end }}
    </div>
  {{ else if eq .Content.Step "select-repo" }}
    <h3>Choose a repository</h2>
    <div>
      Choose the repository that hosts your module source code. We'll watch this for commits and tags. The format of your repository name should be {{ "terraform-<PROVIDER>-<NAME>" }}.
    </div>
    <form action="{{ newModulePath $.Content.Organization }}" method="GET">
      <input type="hidden" name="vcs_provider_id" id="vcs_provider_id" value="{{ .Content.VCSProviderID }}">
      <input type="hidden" name="step" id="select-repo-step" value="confirm-selection">
      <input type="text" name="identifier" id="identifier" value="" placeholder="{owner}/{repository}" required>
      <button>connect</button>
    </form>

    <div id="content-list" class="content-list">
      {{ range .Content.Items }}
        <div class="item">
          <div class="item-heading">
            <span class="status">{{ .Identifier }}</span>
            <form action="{{ newModulePath $.Content.Organization }}" method="GET">
              <input type="hidden" name="vcs_provider_id" id="vcs_provider_id" value="{{ $.Content.VCSProviderID }}">
              <input type="hidden" name="step" id="select-repo-step" value="confirm-selection">
              <input type="hidden" name="identifier" id="identifier" value="{{ .Identifier }}">
              <button>connect</button>
            </form>
          </div>
          <div class="item-content">
            {{ template "identifier" . }}
          </div>
        </div>
      {{ else }}
        No repositories found.
      {{ end }}
    </div>
  {{ else if eq .Content.Step "confirm-selection" }}
    <h3>Confirm module details</h2>
    <div>
      <div>
        <span class="inline-heading">Provider:</span> {{ .Content.VCSProvider.CloudConfig.Name }}
      </div>
      <div>
        <span class="inline-heading">Repository:</span> {{ .Content.Identifier }}
      </div>
    </div>
    <div>
      <form action="{{ createModulePath $.Content.Organization }}" method="GET">
        <input type="hidden" name="vcs_provider_id" id="vcs_provider_id" value="{{ .Content.VCSProviderID }}">
        <input type="hidden" name="identifier" id="identifier" value="{{ .Content.Identifier }}">
        <button>connect</button>
      </form>
    </div>
  {{ end }}
{{ end }}

