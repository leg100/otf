{{ define "content-list" }}
<div class="content-list">
  {{ range .Content.Items }}
  <div class="item">
    {{ block "content-list-item" . }}{{ end }}
  </div>
  {{ else }}
    No items currently exist.
  {{ end }}
  <div class="content-list-footer">
    {{ if .Content.HasPrevPage }}
    <a href="{{ urlJoin (dict "path" $.CurrentPath "query" .Content.PrevPageQuery) }}">Previous Page</a>
    {{ end }}
    {{ if .Content.HasNextPage }}
    <a href="{{ urlJoin (dict "path" $.CurrentPath "query" .Content.NextPageQuery) }}">Next Page</a>
    {{ end }}
  </div>
</div>
{{ end }}
