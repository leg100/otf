{{ define "run-item" }}
  <div id="{{ .ID }}" class="item">
    <div class="item-heading">
      {{ template "run-status" . }}
      <span>|</span>
      <span><a href="{{ getRunPath . }}#plan">plan</a></span>
      {{ if not .PlanOnly }}
        <span>|</span>
        <span><a href="{{ getRunPath . }}#apply">apply</a></span>
      {{ end }}
      <span class="status-ago">{{ durationRound .CreatedAt }} ago</span>
    </div>
    <div class="item-content">
    {{ template "identifier" . }}
    {{ if .Cancelable }}
      <form action="{{ cancelRunPath . }}" method="POST">
        <button class="delete" onclick="return confirm('Are you sure you want to cancel?')">cancel</button>
      </form>
    {{ end }}
    </div>
  </div>
{{ end }}
