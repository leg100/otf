{{ define "run-status" }}
  {{
    $statusColors := dict
      "planned" "bg-purple-200"
      "planned_and_finished" "badge-soft badge-success"
      "applied" "badge-soft badge-success"
      "errored" "badge-soft badge-error"
      "discarded" "bg-gray-200"
  }}
  <span id="{{ .ID }}-status" class="badge {{ get $statusColors .Status.String }} h-fit">
    {{ .Status.String | replace "_" " "}}
  </span>
{{ end }}
