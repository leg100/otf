{{ define "run-status" }}
  <span id="{{ .ID }}-status" class="status status-{{ .Status }}">
    <a href="{{ runPath .ID }}">{{ .Status.String | replace "_" " "}}</a>
  </span>
{{ end }}

{{ define "phase-status" }}
  <span id="{{ .PhaseType }}-status" class="phase-status phase-status-{{ .Status }}" hx-swap-oob="true">
    {{ .Status.String }}
  </span>
{{ end }}
