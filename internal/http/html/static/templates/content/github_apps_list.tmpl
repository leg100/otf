{{ template "layout" . }}

{{ define "content-header-title" }}GitHub app{{ end }}

{{ define "content" }}
  {{ with .App }}
    <div class="flex flex-col gap-2 text-lg">
      <div class="widget">
        <div>
          <span>{{ .String }}</span>
        </div>
        <div>
          {{ template "identifier" . }}
          <form action="{{ deleteGithubAppPath (toString .ID) }}" method="POST">
            <button class="btn-danger" onclick="return confirm('Are you sure you want to delete?')">delete</button>
            <input type="hidden" name="id" value="{{ .ID }}">
          </form>
        </div>
      </div>
    </div>
  {{ else }}
    <span>
      No GitHub app found. Create an app <a class="underline" href="{{ newGithubAppPath }}">here</a>.
    </span>
  {{ end }}
{{ end }}
