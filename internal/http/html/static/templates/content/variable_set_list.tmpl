{{ template "layout" . }}

{{ define "content-header-title" }}Variable Sets{{ end }}

{{ define "content-header-actions" }}
  {{ if .CanCreate }}
    <form action="{{ newVariableSetPath .Organization }}" method="GET">
      <button class="btn" id="new-variable-set-button">
        New Variable Set
      </button>
    </form>
  {{ end }}
{{ end }}

{{ define "content" }}
  {{ template "table" . }}
{{ end }}

{{ define "table-header" }}
  <tr>
    <th>Name</th>
    <th>ID</th>
    <th>Global</th>
  </tr>
{{ end }}

{{ define "table-row" }}
  <tr>
    <td>
      <a href="{{ editVariableSetPath .ID.String }}">{{ .Name }}</a>
    </td>
    <td>{{ template "identifier" . }}</td>
    <td>
      {{ if .Global }}&#10003;{{ end }}
    </td>
  </tr>
{{ end }}
