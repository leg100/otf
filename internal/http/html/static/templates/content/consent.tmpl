{{ template "layout" . }}

{{ define "container" }}
  {{ template "flash" . }}
  <div class="m-auto">
    <div class="flex flex-col justify-center items-center gap-2">
      <h2 class="font-semibold text-lg">Authorize App</h2>
      Hi {{ .CurrentUser }},
      <span>
        <span class="bg-gray-200">terraform</span> is requesting access to your OTF user account.
      </span>
      <form method="POST">
        <button class="btn-danger" name="consented" value="false">Decline</button>
        <button name="consented" value="true">Accept</button>
      </form>
    </div>
  </div>
{{ end }}
