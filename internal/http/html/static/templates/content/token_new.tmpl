{{ template "layout" . }}

{{ define "content-header-title" }}
  <div class="breadcrumbs">
    <ul>
      <li><a href="{{ profilePath }}">profile</a></li>
      <li><a href="{{ tokensPath }}">tokens</a></li>
      <li>new</li>
    </ul>
  </div>
{{ end }}

{{ define "content" }}
  <form class="flex flex-col gap-2" action="{{ createTokenPath }}" method="POST">
    <div class="field">
      <label for="description">Description</label>
      <textarea class="textarea textarea-bordered input input-bordered w-80" name="description" id="description" required></textarea>
    </div>
    <div>
      <button class="btn">Create token</button>
    </div>
  </form>
{{ end }}
