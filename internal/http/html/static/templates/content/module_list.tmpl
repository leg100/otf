{ template "layout" . }

{ define "content-header-title" }modules}

{ define "content-header-actions" }
  { if .CanPublishModule }
    <form action={ newModulePath .Organization } method="GET">
      <button class="btn" id="list-module-vcs-providers-button">Publish</button>
    </form>
  }
}


{ define "content" }
  <div id="content-list">
    for k, v := range .Items {
      { block "content-list-item" . }}
    } else {
      No published modules.
    }
  </div>
}

{ define "content-list-item" }
  <div class="widget" x-data="block_link($el, '{ modulePath .ID.String }')">
    <div>
      <span>{ .Name }</span>
      <span>{ durationRound .CreatedAt } ago</span>
    </div>
    { template "identifier" . }
  </div>
}
