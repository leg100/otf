package helpers

import (
	"context"
	"github.com/leg100/otf/internal/authz"
	"github.com/leg100/otf/internal/resource"
	"github.com/leg100/otf/internal/ui/paths"
	"strings"
)

templ WorkspaceMenu(workspace resource.Info, organization resource.ID, authorizer authz.Interface) {
	<div class="flex flex-row items-center">
		<ul id="workspace-menu" class="menu menu-horizontal">
			@MenuItem("<", paths.Organization(organization))
			@MenuItem("Overview", paths.Workspace(workspace.ID))
			@MenuItem("Runs", paths.Runs(workspace.ID), "/app/runs")
			@MenuItem("Variables", paths.Variables(workspace.ID), "/app/variables", paths.Variables(workspace.ID))
			if authorizer.CanAccess(ctx, authz.UpdateWorkspaceAction, workspace.ID) {
				@MenuItem("Settings", paths.EditWorkspace(workspace.ID), paths.Workspace(workspace.ID)+"/setup-connection")
			}
		</ul>
		<div class="">
			<form id="workspace-start-run-form" action={ paths.StartRunWorkspace(workspace.ID) } method="POST">
				if authorizer.CanAccess(ctx, authz.CreateRunAction, workspace.ID) {
					<select class="select select-sm" name="operation" id="start-run-operation" onchange="this.form.submit()">
						<option disabled selected>-- start run --</option>
						<option value="plan-only">plan only</option>
						if authorizer.CanAccess(ctx, authz.ApplyRunAction, workspace.ID) {
							<option value="plan-and-apply">plan and apply</option>
						}
					</select>
				}
			</form>
		</div>
	</div>
}

templ OrganizationMenu(organization resource.ID) {
	<ul id="organization-menu" class="menu menu-horizontal w-full">
		@MenuItem("Workspaces", paths.Workspaces(organization), "/app/workspaces", "/app/variables")
		if IsOwner(ctx, organization) || IsSiteAdmin(ctx) {
			@MenuItem("Runs", paths.OrganizationRuns(organization), "/app/runs")
		}
		@MenuItem("Teams", paths.Teams(organization), "/app/teams")
		if IsOwner(ctx, organization) || IsSiteAdmin(ctx) {
			@MenuItem("Users", paths.Users(organization), "/app/users")
			@MenuItem("Runners", paths.Runners(organization), "/app/runners")
			@MenuItem("Agent Pools", paths.AgentPools(organization), "/app/agent-pools")
			@MenuItem("Variable Sets", paths.VariableSets(organization), "/app/variable-sets")
			@MenuItem("VCS Providers", paths.VCSProviders(organization), "/app/vcs-providers")
		}
		@MenuItem("Modules", paths.Modules(organization), "/app/modules")
		if IsOwner(ctx, organization) || IsSiteAdmin(ctx) {
			@MenuItem("Organization Token", paths.OrganizationToken(organization))
			@MenuItem("Settings", paths.EditOrganization(organization))
		}
	</ul>
}

templ SiteMenu() {
	<ul class="menu menu-horizontal w-full">
		@MenuItem("Organizations", paths.Organizations())
		@MenuItem("Profile", paths.Profile())
		@MenuItem("User Tokens", paths.Tokens(), "/app/current-user/tokens")
		@MenuItem("Github App", paths.GithubApps())
	</ul>
}

templ MenuItem(title string, path string, matchPrefixes ...string) {
	<li id={ "menu-item-" + strings.ReplaceAll(strings.ToLower(title), " ", "-") }>
		<a
			href={ path }
			class={ templ.KV("menu-active", menuIsActive(ctx, path, matchPrefixes...)) }
		>
			{ title }
		</a>
	</li>
}

func menuIsActive(ctx context.Context, path string, pathPrefixes ...string) bool {
	if CurrentPath(ctx) == path {
		return true
	}
	for _, p := range pathPrefixes {
		if strings.HasPrefix(CurrentPath(ctx), p) {
			return true
		}
	}
	return false
}
