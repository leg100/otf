templ tokenDescription(hostname string) {
	{{
		u := &url.URL{
			Scheme: "https",
			Host:   hostname,
			Path:   "/user/settings/applications",
		}
	}}
	Create a <a class="link" href={ templ.SafeURL(u.String()) }>personal access token</a> with the permissions <span class="font-bold">repository read and write</span> and <span class="font-bold">user read</span>.
}
